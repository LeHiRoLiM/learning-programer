Algoritmo "ParOuImpar"
//  
//  
Var
   Num:inteiro

Inicio

   escreval("Digite qualquer número:")
   leia(Num)
   se(Num%2=0) então
      Escreva("O número",Num,"é PAR")

   senão(Num % 2=1)então
   escreva("O número",Num, " é IMPAR")
      escreval("                       ")

   fimSe






Fimalgoritmo